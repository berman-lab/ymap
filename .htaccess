#================================================================
# Deny access to filenames starting with dot(.); .htaccess, etc.
#----------------------------------------------------------------
<FilesMatch "^\.">
Order allow,deny
Deny from all
</FilesMatch>

#============================================================
# TXT/ZIP/MAT/JS/SH/CSS/PY/M files should never be accessible.
#------------------------------------------------------------
<FilesMatch "<*.txt">
Order allow,deny
Deny from all
</FilesMatch>

<FilesMatch "<*.mat">
Order allow,deny
Deny from all
</FilesMatch>

<FilesMatch "<*.zip">
Order allow,deny
Deny from all
</FilesMatch>

<FilesMatch "<*.js">
Order allow,deny
Deny from all
</FilesMatch>

<FilesMatch "<*.sh">
Order allow,deny
Deny from all
</FilesMatch>

<FilesMatch "<*.css">
Order allow,deny
Deny from all
</FilesMatch>

<FilesMatch "<*.py">
Order allow,deny
Deny from all
</FilesMatch>

<FilesMatch "<*.m">
Order allow,deny
Deny from all
</FilesMatch>

